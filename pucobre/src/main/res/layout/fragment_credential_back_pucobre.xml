<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:alpha="0"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewHeaderBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCredentialKS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/credential_title"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="AUTORIZACIONES"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewHeaderBack">

                <ImageView
                    android:id="@+id/imgSellos"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="-6dp"
                    android:src="@drawable/sellos_pucobre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vencimiento Licencia:"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgSellos" />


                <TextView
                    android:id="@+id/lblVencLic"
                    style="@style/credentialText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"

                    app:layout_constraintTop_toTopOf="@+id/textView18"
                    tools:text="Vencimiento Licencia:" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Licencia Clase:"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <TextView
                    android:id="@+id/lblLicMunicipal"
                    style="@style/credentialText"
                    android:layout_width="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView19"
                    tools:text="NA:" />

                <TextView
                    android:id="@+id/textView21"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Venc. Psicosensotecnico:"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <TextView
                    android:id="@+id/lblVencPsico"
                    style="@style/credentialText"
                    android:layout_width="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView21"
                    tools:text="31/12/2020" />

                <TextView
                    android:id="@+id/textView24"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha Ingreso Compañía:"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

                <TextView
                    android:id="@+id/lblFecIngresoComp"
                    style="@style/credentialText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView24"
                    tools:text="31/12/2022" />

                <TextView
                    android:id="@+id/textView26"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Zona Conducción:"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView24" />

                <TextView
                    android:id="@+id/lblZonaConduccion"
                    style="@style/credentialText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView26"
                    tools:text="Mina, Zona 1, Zona 2, Zona 3" />



                <TextView
                    android:id="@+id/textView33"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tipos de vehiculos: "
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblFecIngresoComp" />

                <TextView
                    android:id="@+id/txtVacio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:text="-"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVehicleList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView33"
                    tools:itemCount="5"
                    tools:listitem="@layout/credential_back_vehicle">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:id="@+id/textView36"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-15dp"
                    android:text="Ingreso mina "
                    app:layout_constraintBottom_toTopOf="@+id/textView34"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rvVehicleList" />

                <ImageView
                    android:id="@+id/btnInfo3"
                    style="@style/credentialText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_information"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.267"
                    app:layout_constraintStart_toStartOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView36"
                    tools:text="test" />

                <TextView
                    android:id="@+id/textView34"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Datos personales "
                    android:layout_marginBottom="-5dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintBottom_toTopOf="@id/textView35"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView36" />

                <ImageView
                    android:id="@+id/btnInfo"
                    style="@style/credentialText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_information"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.267"
                    app:layout_constraintStart_toEndOf="@+id/guideline19"
                    app:layout_constraintTop_toTopOf="@+id/textView34"
                    tools:text="test" />

                <TextView
                    android:id="@+id/textView35"
                    style="@style/credentialTextBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="En caso de emergencia "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <ImageView
                    android:id="@+id/btnInfo2"
                    style="@style/credentialText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_information"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.29"
                    app:layout_constraintStart_toEndOf="@+id/textView35"
                    app:layout_constraintTop_toTopOf="@+id/textView35"
                    tools:text="test" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnVerAdelante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="@dimen/fab_margin"
                    app:tint="@color/white"
                    app:backgroundTint="@color/colorCredentialKS"
                    app:fabSize="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/flip_card" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>