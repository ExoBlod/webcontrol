<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/clReservaBus3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layout_marginTop="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReservaBus2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBus"
            android:layout_width="74dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ticketbus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/tvDuration"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_width="30dp"
            android:maxLines="1"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="30Hrs" />

        <TextView
            android:id="@+id/tvNameBus"
            android:layout_width="191dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="1"

            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivBus"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AAA222" />

        <TextView
            android:id="@+id/tvOrigenBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivBus"
            app:layout_constraintTop_toBottomOf="@+id/tvNameBus"
            tools:text="ORIGEN" />

        <ImageView
            android:id="@+id/ivArrowBus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:rotation="180"
            android:src="@drawable/ic_triple_arrowhead"
            app:layout_constraintStart_toEndOf="@+id/tvOrigenBus"
            app:layout_constraintTop_toBottomOf="@+id/tvNameBus" />

        <TextView
            android:id="@+id/tvDestinoBus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="4dp"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivArrowBus"
            app:layout_constraintTop_toBottomOf="@+id/tvNameBus"
            tools:text="DESTINO" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:src="@drawable/ic_clock"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvDuration"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.151" />

        <TextView
            android:id="@+id/tvFechaBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/subtitle"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivDateReservaBus"
            tools:text="2022/05/13" />

        <ImageView
            android:id="@+id/ivDateReservaBus"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBus"
            app:srcCompat="@drawable/ic_event_black_24dp" />

        <TextView
            android:id="@+id/tvHoraBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="@color/subtitle"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvFechaBus"
            tools:text="13:00:00pm" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
