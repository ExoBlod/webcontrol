<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgDisclosureIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/ic_outline_location_on_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/colorAccent" />
    <TextView
        android:id="@+id/txtDisclosureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uso de la ubicaci칩n"
        app:layout_constraintTop_toBottomOf="@+id/imgDisclosureIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtDisclosureDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivo por el que necesitamos el acceso a tu ubicaci칩n en todo momento. Webcontrol usar치 tu ubicaci칩n en segundo plano"
        app:layout_constraintTop_toBottomOf="@+id/txtDisclosureTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/imgDisclosureMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/map_location"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/txtDisclosureDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No gracias"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/btnGrant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTIVAR"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>