<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnValidar"
        style="@style/ButtonAccentStyle"
        app:cornerRadius="@dimen/radius_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="VALIDAR DATOS" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        app:layout_constraintBottom_toBottomOf="@+id/btnValidar"
        app:layout_constraintEnd_toEndOf="@+id/btnValidar"
        app:layout_constraintStart_toStartOf="@+id/btnValidar"
        app:layout_constraintTop_toTopOf="@+id/btnValidar"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_rawRes="@raw/loader_rest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>