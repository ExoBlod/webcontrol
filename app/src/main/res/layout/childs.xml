<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_NomEvaluacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lbl_EstadoEvaluacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ResultadoEvaluacion"
        app:layout_constraintVertical_bias="0.0"
        tools:text="EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EXAMEN 1 EX" />

    <TextView
        android:id="@+id/lbl_Duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hora: 07:00" />

    <TextView
        android:id="@+id/lbl_EstadoEvaluacion"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="14dp"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_EstadoEvaluacion"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Duracion"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Estado" />

    <ImageView
        android:id="@+id/img_EstadoEvaluacion"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_Duracion"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/completed" />

    <ImageView
        android:id="@+id/img_ResultadoEvaluacion"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_evaluated" />

</androidx.constraintlayout.widget.ConstraintLayout>